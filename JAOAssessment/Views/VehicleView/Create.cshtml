@model JAOAssessment.Models.Vehicle

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleKey" class="control-label"></label>
                <input asp-for="VehicleKey" class="form-control" />
                <span asp-validation-for="VehicleKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineKey" class="control-label"></label>
                <input asp-for="EngineKey" class="form-control" />
                <span asp-validation-for="EngineKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaintKey" class="control-label"></label>
                <input asp-for="PaintKey" class="form-control" />
                <span asp-validation-for="PaintKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InteriorKey" class="control-label"></label>
                <input asp-for="InteriorKey" class="form-control" />
                <span asp-validation-for="InteriorKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityOnHand" class="control-label"></label>
                <input asp-for="QuantityOnHand" class="form-control" />
                <span asp-validation-for="QuantityOnHand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="insveh" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
